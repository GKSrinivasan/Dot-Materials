@model  Laserbeam.BusinessObject.Common.BusSettingModel

<script type="text/javascript">

    $(document).ready(function () {
        var merit = '@Model.Merit';
        var Promotion = '@Model.Promotion';
        var Lumsum = '@Model.Lumpsum';
        var Adjustment = '@Model.Adjustment';
        var Workflow = '@Model.WorkFlow';
        var Multicurr = '@Model.MultiCurrency';
        var PerfRating = '@Model.RatingDisplay';

        if (merit == "YES") $("#lblMerit").show();
        else $("#lblMerit").hide();
        if (Promotion == "YES") $("#lblPromotion").show();
        else $("#lblPromotion").hide();
        if (Lumsum == "YES") $("#lblLumsum").show();
        else $("#lblLumsum").hide();
        if (Adjustment == "YES") $("#lblAdjustment").show();
        else $("#lblAdjustment").hide();
        if (Workflow == "YES") $("#lblWorkFlow").show();
        else $("#lblWorkFlow").hide();
        if (Multicurr == "YES") $("#lblMultiCurrency").show();
        else $("#lblMultiCurrency").hide();
        if (PerfRating == "YES") $("#lblPerfRating").show();
        else $("#lblPerfRating").hide();
    });
</script>
<div class="form-actions">
    <div class="row">
        <div class="col-md-12">
            <div class="text-right" id="btnLevels">
                <a href="javascript:;" class="btn default button-previous" id="btnBackToBudget">
                    <i class="fa fa-chevron-left"></i>
                </a>
            </div>
        </div>
    </div>
</div>
